<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileRead">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="11">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="#03A9F4"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:background="#03A9F4"
                android:gravity="center"
                android:text="Profile Data"
                android:textSize="34sp" />

            <Button
                android:id="@+id/edit_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:text="Edit Profile Data" />
        </LinearLayout>

        <TextView
            android:id="@+id/read_first_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center|left"
            android:paddingStart="20dp"
            android:text="First Name"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/read_last_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center|left"
            android:paddingStart="20dp"
            android:textSize="24sp"
            android:text="Last Name" />

        <TextView
            android:id="@+id/read_credit_car_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center|left"
            android:paddingStart="20dp"
            android:textSize="24sp"
            android:text="Credit Card Number" />

        <TextView
            android:id="@+id/read_cvv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center|left"
            android:paddingStart="20dp"
            android:textSize="24sp"
            android:text="CVV" />

        <TextView
            android:id="@+id/read_expiry"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center|left"
            android:paddingStart="20dp"
            android:text="Credit Expiry Date"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/read_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center|left"
            android:paddingStart="20dp"
            android:textSize="24sp"
            android:text="Address" />

        <TextView
            android:id="@+id/read_city"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center|left"
            android:paddingStart="20dp"
            android:textSize="24sp"
            android:text="City" />

        <TextView
            android:id="@+id/read_country"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center|left"
            android:paddingStart="20dp"
            android:textSize="24sp"
            android:text="Country" />

        <TextView
            android:id="@+id/read_zip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center|left"
            android:paddingStart="20dp"
            android:textSize="24sp"
            android:text="ZIP Code" />

        <TextView
            android:id="@+id/read_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center|left"
            android:paddingStart="20dp"
            android:textSize="24sp"
            android:text="Email" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>